FROM oven/bun:alpine AS base

WORKDIR /app

COPY /packages ./packages
COPY ./bun.lock ./

COPY ./package.json ./
COPY ./turbo.json ./

COPY ./apps/backend ./apps/backend


RUN bun install
RUN bun run generate:db

CMD ["bun","run","start:backend"]





